#include "ramenrsc.h"

FORM ID MainForm AT (0 0 160 160)
USABLE
NOSAVEBEHIND
MENUID MainMenuBar
BEGIN
    TITLE "Ramen"
    repeatbutton "\01" id REPEATUP at (102 46 13 8) font 5 noframe
    repeatbutton "\02" id REPEATDOWN at (102 54 13 8) font 5 noframe
	BUTTON "1" ID PRESET1 AT (12 70 20 12) FONT 1 BOLDFRAME
	BUTTON "3" ID PRESET2 AT (41 70 20 12) FONT 1 BOLDFRAME
	BUTTON "5" ID PRESET3 AT (70 70 20 12) FONT 1 BOLDFRAME
	BUTTON "10" ID PRESET4 AT (99 70 20 12) FONT 1 BOLDFRAME
	BUTTON "60" ID PRESET5 AT (128 70 20 12) FONT 1 BOLDFRAME
    button "Start/Stop" id STARTBUTTON at (1 147 60 12) font 0
	FIELD ID DISPLAY0 AT (60 44 30 22) FONT 6 NONEDITABLE RIGHTALIGN MAXCHARS 3
	GRAFFITISTATEINDICATOR AT (143 147)
END

FORM ID ALARMFORM AT (2 2 156 156)
MODAL
USABLE
SAVEBEHIND
BEGIN
	TITLE "Ramen"
	LABEL "Your ramen is ready." ID ALARMLABEL AT (24 48) FONT 2
	button "OK" id ALARMOKBUTTON at (9 105 139 43) font 2
END

alert id AboutAlert
information
begin
	title "About Ramen"
	message "Ramen Timer RAMENVERSION\nby H.Tomari\ndavy@nyacom.net"
   	buttons "OK"
end

ALERT ID OUTOFMEMORYALERT
ERROR
BEGIN
	TITLE "Error"
	MESSAGE "Insufficient memory."
	buttons "OK"
END

ALERT ID TABLEFULLALERT
ERROR
BEGIN 
	TITLE "Error"
	MESSAGE "Alarm table is full."
	BUTTONS "OK"
END

ALERT ID NOINTLMGRALERT
ERROR
BEGIN
	TITLE "Error"
	MESSAGE "PalmOS 2.0 is required."
	BUTTONS "OK"
END

MENU MainMenuBar
BEGIN
    PULLDOWN "Options"
    BEGIN
		MENUITEM "Preferences..." ID MenuPrefs "R"
		MENUITEM SEPARATOR
        MENUITEM "About Ramen" ID MenuAboutRamen
    END
END

APPLICATION 1 "Ramn"
APPLICATIONICONNAME ID 100 "Ramen"
VERSION "RAMENVERSION"

ICONFAMILYEX
BEGIN
	BITMAP "ramen32x32bw.pbm" BPP 1 COMPRESS COMPRESSSCANLINE DENSITY 1
	BITMAP "ramen32x32c.ppm" BPP 8 COMPRESS COMPRESSSCANLINE TRANSPARENT 255 0 255 DENSITY 1
	BITMAP "ramen64x64.ppm" BPP 8 COMPRESS COMPRESSSCANLINE TRANSPARENT 255 0 255 DENSITY 2
END

SMALLICONFAMILYEX
BEGIN
	BITMAP "ramen15x9bw.pnm" BPP 1 COMPRESS COMPRESSSCANLINE DENSITY 1
	BITMAP "ramen15x9c.pnm" BPP 8 COMPRESS COMPRESSSCANLINE TRANSPARENT 255 0 255 DENSITY 1
	BITMAP "ramen30x18.pnm" BPP 8 COMPRESS COMPRESSSCANLINE TRANSPARENT 255 0 255 DENSITY 2
END
